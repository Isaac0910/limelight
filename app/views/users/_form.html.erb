<%= form_for @user do |f| %>

  <div class="form-group">
    <%= f.text_field :email, :class => "form-control", :placeholder => 'Email' %>
    <% unless @user.errors[:email].empty? %>
      <p class="text-danger">
        <% @user.errors.full_messages_for(:email).each do |e| %>
          <%= e %><br>
        <% end %>
      </p>
    <% end %>
  </div>

<% if @user.new_record? %>

  <div class="form-group">
    <%= f.password_field :password, :class => "form-control", :placeholder => 'Password' %>
    <% unless @user.errors[:password].empty? %>
      <p class="text-danger">
        <% @user.errors.full_messages_for(:password).each do |e| %>
          <%= e %><br>
        <% end %>
      </p>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => 'Confirm Password' %>
    <% unless @user.errors[:password_confirmation].empty? %>
      <p class="text-danger">
        <% @user.errors.full_messages_for(:password_confirmation).each do |e| %>
          <%= e %><br>
        <% end %>
      </p>
    <% end %>
  </div>

<% end %>

  <div class="form-group">
    <%= f.text_field :nickname, :class => "form-control", :placeholder => 'Nickname' %>
    <% unless @user.errors[:nickname].empty? %>
      <p class="text-danger">
        <% @user.errors.full_messages_for(:nickname).each do |e| %>
          <%= e %><br>
        <% end %>
      </p>
    <% end %>
  </div>

  <div class="form-group">
    <span class="btn-group">
      <%= f.submit ( f.object.new_record? ? "Create" : "Update"), :class => "btn btn-primary" %>
    </span>
  </div>

<% end %>
