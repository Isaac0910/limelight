<% @title = "Forgotten Password" %>

<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_tag forgotten_password_path do %>
  <%= invisible_captcha :bucket %>
  <div class="form-group">
    <%= text_field_tag :email, nil, :type => 'Email', :class => 'form-control', :placeholder => 'Email' %>
  </div>
  <div class="form-group">
    <%= submit_tag "Send Instuctions", :class => 'btn btn-primary' %>
  </div>
<% end %>
