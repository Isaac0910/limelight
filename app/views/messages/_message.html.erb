<div class="message">
  <% unless message.sender.nil? %>
    <% cls = 'player' %>
    <% cls += ' shout' if message.is_shouted? %>
  <% else %>
    <% cls = 'audience' %>
  <% end %>
  <p class="<%= cls %>">
    <%= message.sender ? message.sender.nickname : 'Audience' %> : <%= auto_link(message.formatted_content, html: { target: '_blank' }) %>
  </p>
</div>
