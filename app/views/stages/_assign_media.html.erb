<div id="assignModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for StageMedium.new({ stage: @stage }) do |f| %>
      <%= f.hidden_field :stage_id %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Assign Media</h4>
      </div>
      <div class="modal-body">
        <%= f.select :medium_id, Medium.all.map { |m| [ m.name, m.id ] }, {}, :class => "form-control" %>
      </div>
      <div class="modal-footer">
        <button type="submit" name="confirm" class="btn btn-success">
          <span class="glyphicon glyphicon-ok"></span>
        </button>
      </div>
      <% end %>
    </div>
  </div>
</div>
