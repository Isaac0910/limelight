<% @title = 'Media' %>

<div class="page-header">
  <h1>
    Media
    <small class="pull-right">
      <div class="btn-toolbar">
        <div class="btn-group mr-2">
          <%= link_to media_path, :class => 'btn btn-default' + (params[:v] != 'tab' ? ' active' : '') do %>
            <span class="glyphicon glyphicon-th"></span>
          <% end %>
          <%= link_to (media_path :v => 'tab'), :class => 'btn btn-default' + (params[:v] == 'tab' ? ' active' : '') do %>
            <span class="glyphicon glyphicon-th-list"></span>
          <% end %>
        </div>
      </div>
    </small>
  </h1>
</div>

<% if params[:v] == 'tab' %>
  <%= render 'table' %>
<% else %>

  <% @media.each do |m| %>
    <%= render :partial => 'panel', :locals => { medium: m } %>
  <% end %>

<% end %>
