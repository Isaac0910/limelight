<div class="col-xs-12 col-sm-4 col-md-3 col-lg-2">
  <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title"><%= link_to avatar.name, avatar %></h4>
      </div>
      <div class="panel-body">
        <%= link_to avatar do %>
          <%= image_tag avatar.source.url, :alt => avatar.name, :class => 'img-responsive' %>
        <% end %>
      </div>
      <div class="panel-footer">
        <span class="btn-group btn-group-sm pull-right">
          <%= link_to edit_avatar_path(avatar), :class => 'btn btn-default btn-sm' do %>
            <span class="glyphicon glyphicon-edit"></span>
          <% end %>
          <%= link_to avatar, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger btn-sm' do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </span>
        <div class="clearfix"></div>
      </div>
  </div>
</div>
