<div class="col-xs-12 col-sm-4 col-md-3 col-lg-2">
  <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title"><%= link_to avatar.name, edit_avatar_path(avatar) %></h4>
      </div>
      <div class="panel-body">
        <%= link_to edit_avatar_path(avatar) do %>
          <%= image_tag avatar.source.url, :alt => avatar.name, :class => 'img-responsive' %>
        <% end %>
      </div>
      <div class="panel-footer">
        <span class="btn-group btn-group-sm pull-right">
          <%= link_to avatar, :method => :delete, :data => { :confirm => "#{avatar.name} will be removed" }, :class => 'btn btn-danger btn-sm' do %>
            <span class="glyphicon glyphicon-trash"></span>
          <% end %>
        </span>
        <div class="clearfix"></div>
      </div>
  </div>
</div>
