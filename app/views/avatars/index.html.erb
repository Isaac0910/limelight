<% @title = 'Avatars' %>

<div class="page-header">
  <h1>
    Avatars
    <small class="pull-right">
      <span class="btn-group">
        <%= link_to new_avatar_path, :class => "btn btn-primary" do %>
          <span class="glyphicon glyphicon-plus"></span>
        <% end %>
      </span>
    </small>
  </h1>
  </h1>
</div>

<% if params[:v] == 'tab' %>
  <%= render 'table' %>
<% else %>

  <% @avatars.each do |a| %>
    <%= render :partial => 'panel', :locals => { avatar: a } %>
  <% end %>

<% end %>
