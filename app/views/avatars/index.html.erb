<% @title = 'Avatars' %>

<div class="page-header">
  <h1>
    Avatars
    <small class="pull-right">
      <div class="btn-toolbar">
        <div class="btn-group mr-2">
          <%= link_to avatars_path, :class => 'btn btn-default' + (params[:v] != 'tab' ? ' active' : '') do %>
            <span class="glyphicon glyphicon-th"></span>
          <% end %>
          <%= link_to (avatars_path :v => 'tab'), :class => 'btn btn-default' + (params[:v] == 'tab' ? ' active' : '') do %>
            <span class="glyphicon glyphicon-th-list"></span>
          <% end %>
        </div>
        <div class="btn-group">
          <%= link_to new_avatar_path, :class => "btn btn-primary" do %>
            <span class="glyphicon glyphicon-plus"></span>
          <% end %>
        </div>
      </div>
    </small>
  </h1>
</div>

<% if params[:v] == 'tab' %>
  <%= render 'table' %>
<% else %>

  <% @avatars.each do |a| %>
    <%= render :partial => 'panel', :locals => { avatar: a } %>
  <% end %>

<% end %>
