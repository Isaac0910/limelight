<%= form_for @avatar do |f| %>
<div id="updateField">
  <div class="form-group">
    <%= f.text_field :name, :class => "form-control", :placeholder => 'Name' %>
    <% unless @avatar.errors[:name].empty? %>
      <p class="text-danger">
        <% @avatar.errors.full_messages_for(:name).each do |e| %>
          <%= e %><br>
        <% end %>
      </p>
    <% end %>
  </div>


  <div class="form-group input-group">
    <%= f.file_field :source, :class => 'form-control width100', :placeholder => 'Choose File' %>
    <% unless @avatar.errors[:source].empty? %>
      <p class="text-danger">
        <% @avatar.errors.full_messages_for(:source).each do |e| %>
          <%= e %><br>
        <% end %>
      </p>
    <% end %>

    <span class="input-group-btn">
      <%= f.submit ( f.object.new_record? ? "Create" : "Update"), :class => "btn btn-primary" %>
    </span>
  </div>
</div>

  <hr>
  <br>

  <div class ="col-sm-2">
    <% unless @avatar.new_record? %>
      <%= image_tag @avatar.source.url(:medium), :alt => "#{@avatar.name}", :class => 'img-rounded img-responsive' %>
    <% end %>
  </div>

<% end %>
